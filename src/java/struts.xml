        <!-- ********************************************* MENU ADMINISTRADOR********************************************************-->
        <action name="pantallaAltaAdministrador" method="altaAdministrador" class="com.saem.actions.MenuAdministradorAction">
            <result name="pantallaAltaAdministrador" type="tiles">pantallaAltaAdministrador</result>
        </action>

        <action name="pantallaModificarEliminarAdministrador" method="modElmAdministrador" class="com.saem.actions.MenuAdministradorAction">
            <result name="pantallaModificarEliminarAdministrador" type="tiles">pantallaModificarEliminarAdministrador</result>
        </action>

        <action name="pantallaConsultarAdministrador" method="consultarAdministrador" class="com.saem.actions.MenuAdministradorAction">
            <result name="pantallaConsultarAdministrador" type="tiles">pantallaConsultarAdministrador</result>
        </action>
        <!-- ******************************************* FIN MENU ADMINISTRADOR *********************************************** -->
        
        <!-- ******************************************** REGISTRAR ADMINISTRADOR **************************************-->
        <!-- Registar Administrador -->
        <action name="registrarAdministrador" method="registrarAdministrador" class="com.saem.actions.RegistrarAdministradorAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2097152</param>
                <param name="allowedTypes">
                    image/png,image/gif,image/jpeg,image/pjpeg
                </param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result name="pantallaAltaAdministrador" type="tiles">pantallaAltaAdministrador</result>
        </action>
        <!-- Fin Registar Administrador -->

        <!-- Validar usuario -->
        <action name="validarNombreUsuarioAdmin" method="validarNombreUsuarioAdmin" class="com.saem.actions.RegistrarAdministradorAction">
            <result name="success" type="json">JSON</result>
        </action>
        <!-- Fin Validar usuario -->

        <!-- Recuperar Msjs de Registro-->
        <action name="recuperarMensajeEstatusAdmin" method="recuperarEstatusAdmin" class="com.saem.actions.RegistrarAdministradorAction">
            <result name="success" type="json">JSON</result>
        </action>
        <!-- Fin Recuperar Msjs -->
        <!-- ******************************************** FIN REGISTRAR ADMINISTRADOR **********************************-->

        <!-- ******************************************** ELIMINAR ADMINISTRADOR *******************************************************************-->
        <!-- Eliminar Administrador -->
        <action name="eliminarAdministrador" method="eliminarAdministrador" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <result name="pantallaModificarEliminarAdministrador" type="json">JSON</result>
        </action>
        
        <action name="eliminarAdministradorPorFiltro" method="eliminarAdministradorPorFiltro" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <result name="pantallaModificarEliminarAdministrador" type="json">JSON</result>
        </action>
        <!-- Fin Eliminar Administrador -->
        <!-- ******************************************** FIN ELIMINAR ADMINISTRADOR ****************************************************************-->
        
        <!-- ******************************************** BUSCAR DATOS PARA EDITAR ADMINISTRADOR ****************************************************************-->
        <action name="buscarDatosPersonalesAdministrador" method="buscarDatosPersonalesAdministrador" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <result name="success" type="json">JSON</result>
        </action>

        <action name="buscarDatosDireccionAdministrador" method="buscarDatosDireccionAdministrador" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <result name="success" type="json">JSON</result>
