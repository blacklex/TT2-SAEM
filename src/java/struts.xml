        </action>
        <!-- ******************************************** FIN BUSCAR DATOS PARA EDITAR ADMINISTRADOR ****************************************************************-->

        <!-- ******************************************** EDITAR ADMINISTRADOR ****************************************************************-->
        <!-- Editar Acceso Administrador -->
        <action name="editarAccesoAdministrador" method="editarAccesoAdministrador" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <result name="pantallaModificarEliminarAdministrador" type="tiles">pantallaModificarEliminarAdministrador</result>
        </action>
        <!-- Fin Editar Acceso Administrador -->
        
        <!-- Editar Datos Persoanles Administrador -->
        <action name="editarDatosPersonalesAdministrador" method="editarDatosPersonalesAdministrador" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2097152</param>
                <param name="allowedTypes">
                    image/png,image/gif,image/jpeg,image/pjpeg
                </param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result name="pantallaModificarEliminarAdministrador" type="tiles">pantallaModificarEliminarAdministrador</result>
        </action>
        <!-- Fin Editar Datos Personales Administrador -->
        <!-- Editar Acceso Administrador -->
        <action name="editarDireccionAdministrador" method="editarDireccionAdministrador" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <result name="pantallaModificarEliminarAdministrador" type="tiles">pantallaModificarEliminarAdministrador</result>
        </action>
        <!-- Fin Editar Acceso Administrador -->
        <!-- Editar Datos Persoanles Administrador -->
        <action name="editarAdminPorFiltro" method="editarAdminPorFiltro" class="com.saem.actions.ModificarEliminarAdministradorAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">2097152</param>
                <param name="allowedTypes">
                    image/png,image/gif,image/jpeg,image/pjpeg
                </param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result name="pantallaModificarEliminarAdministrador" type="tiles">pantallaModificarEliminarAdministrador</result>
        </action>
        <!-- Fin Editar Datos Personales Administrador -->
        <!-- ******************************************** FIN EDITAR ADMINISTRADOR ****************************************************************-->
        
        <!-- ******************************************** BUSCAR DATOS PARA CONSULTAR ADMINISTRADOR ****************************************************************-->
        <action name="verDatosPersonalesAdministrador" method="buscarDatosPersonalesAdministrador" class="com.saem.actions.ConsultarAdministradorAction">
            <result name="success" type="json">JSON</result>
        </action>

        <action name="verDatosDireccionAdministrador" method="buscarDatosDireccionAdministrador" class="com.saem.actions.ConsultarAdministradorAction">
            <result name="success" type="json">JSON</result>
        </action>
        
        <action name="buscarDatosMostrarFiltro" method="buscarDatosMostrarFiltro" class="com.saem.actions.ConsultarAdministradorAction">
            <result name="success" type="json">JSON</result>
        </action>
        <!-- ******************************************** FIN BUSCAR DATOS PARA CONSULTAR ADMINISTRADOR ****************************************************************-->
        
        <!-- ******************************************** RECUPERAR MSJ ADMINISTRADOR ****************************************************************-->                
